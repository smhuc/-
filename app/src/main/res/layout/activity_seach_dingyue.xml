<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lin_layout"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@color/ss_bg">
     <RelativeLayout
	       android:layout_width="match_parent"
	       android:layout_weight="1"
		   android:layout_marginLeft="15dp"
		   android:layout_marginRight="15dp"
	        android:layout_height="wrap_content"
	        android:background="@drawable/login_input">
	        <ImageView
	            android:id="@+id/img_photo"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:background="@drawable/research_ico"/>
	        <EditText 
	            android:id="@+id/edit"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@null"
	            android:lines="1"
	            android:imeOptions="actionSearch"
	            android:inputType="text"
	            android:layout_toRightOf="@id/img_photo"
	            android:layout_toLeftOf="@+id/img_cancal"
	            />
	        <ImageView
	            android:id="@id/img_cancal"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:visibility="gone"
	            android:background="@drawable/login_input_del"/>
	    </RelativeLayout>
	    <TextView 
	        android:id="@+id/tx_cancal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/text_red"
	        android:textSize="@dimen/s14"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_gravity="center_vertical"
	        android:text="取消"/>
	 </LinearLayout>
	 <com.wangtian.message.view.XListView
	     android:id="@+id/list_seach"
	     android:layout_width="match_parent"
	     android:layout_height="match_parent"
	     android:divider="@null"
	     android:background="@color/white"/>
	     
</LinearLayout>
