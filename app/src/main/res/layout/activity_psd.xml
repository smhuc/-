<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include 
         layout="@layout/activity_head_red"/>
    <LinearLayout
         android:id="@+id/lin_login"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/bg"
	    android:orientation="vertical" >
	 
	    <RelativeLayout
	     	android:layout_width="match_parent"
		   	android:layout_marginLeft="15dp"
		  	android:layout_marginRight="15dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:background="@drawable/login_input"
	        >
	        <ImageView
	            android:id="@+id/img_password"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentLeft="true"
	            android:background="@drawable/login_ico_password"
	            />
	        <EditText 
	            android:id="@+id/edit_password"
	            android:layout_width="match_parent"
	            android:layout_height="40dp"
	            android:background="@null"
	            android:layout_toRightOf="@id/img_password"
	            android:layout_toLeftOf="@+id/img_password_cancal"
	            android:inputType="textPassword"
	            android:lines="1"
	            android:hint="密码"
	            />
	        <ImageView 
	            android:id="@id/img_password_cancal"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:visibility="gone"
	            android:background="@drawable/login_input_del"/>
	     </RelativeLayout>
	    
		<TextView 
		    android:id="@+id/tx_login"
		    android:layout_width="match_parent"
		    android:layout_marginLeft="15dp"
		    android:layout_marginRight="15dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:textColor="@color/white"
	        android:background="@drawable/login_btn_nor"
	        android:gravity="center"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:text="确认"/>
		</LinearLayout>
</LinearLayout>
