<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include 
         layout="@layout/activity_head_red"/>
    <LinearLayout
         android:id="@+id/lin_login"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/bg"
	    android:orientation="vertical" >
	    <RelativeLayout
	       android:layout_width="match_parent"
		   android:layout_marginLeft="15dp"
		   android:layout_marginRight="15dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="30dp"
	        android:background="@drawable/login_input">
	        <ImageView
	            android:id="@+id/img_photo"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:background="@drawable/login_ico_account"/>
			<!--android:text="jones"-->
			<EditText
	            android:id="@+id/edit"
	            android:layout_width="match_parent"
	            android:layout_height="40dp"
	            android:background="@null"
	            android:lines="1"

	            android:layout_toRightOf="@id/img_photo"
	            android:layout_toLeftOf="@+id/img_cancal"
	            android:hint="账号"
	            />
	        <ImageView
	            android:id="@id/img_cancal"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:visibility="gone"
	            android:layout_centerVertical="true"
	            android:background="@drawable/login_input_del"/>
	    </RelativeLayout>
	    <RelativeLayout
	     	android:layout_width="match_parent"
		   	android:layout_marginLeft="15dp"
		  	android:layout_marginRight="15dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:background="@drawable/login_input"
	        >
	        <ImageView
	            android:id="@+id/img_password"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentLeft="true"
	            android:background="@drawable/login_ico_password"
	            />
			<!--android:text="123456"-->
	        <EditText

	            android:id="@+id/edit_password"
	            android:layout_width="match_parent"
	            android:layout_height="40dp"
	            android:background="@null"
	            android:layout_toRightOf="@id/img_password"
	            android:layout_toLeftOf="@+id/img_password_cancal"
	            android:inputType="textPassword"
	            android:lines="1"
	            android:hint="密码"
	            />
	        <ImageView 
	            android:id="@id/img_password_cancal"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:visibility="gone"
	            android:background="@drawable/login_input_del"/>
	     </RelativeLayout>
	     <LinearLayout 
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:layout_marginTop="20dp"
	         android:orientation="horizontal">
	    <RelativeLayout
	       android:layout_width="match_parent"
	       android:layout_weight="1"
		   android:layout_marginLeft="15dp"
		   android:layout_marginRight="15dp"
	       android:layout_height="wrap_content"
	       android:background="@drawable/login_input"
	        >
	        <ImageView
	            android:id="@+id/img_yanzheng"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:background="@drawable/login_ico_idcode"
	            />
	        <EditText 
	            android:id="@+id/edit_yanzheng"
	            android:layout_width="match_parent"
	            android:layout_height="40dp"
	            android:layout_toRightOf="@id/img_yanzheng"
	            android:background="@null"
	            android:lines="1"
	            android:hint="验证码"
	            />
	      </RelativeLayout>
	        <TextView 
	            android:id="@+id/img_yanzheng_cancal"
	            android:layout_width="90dp"
	            android:layout_height="40dp"
	            android:layout_marginLeft="10dp"
	            android:textSize="@dimen/s16"
	            android:layout_marginRight="15dp"
	            android:gravity="center"
	            android:paddingTop="5dp"
	            android:lines="1"
	            android:paddingBottom="5dp"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:textColor="@color/white"
	            android:background="#578FCF"/>
	    </LinearLayout>
		<TextView 
		    android:id="@+id/tx_login"
		    android:layout_width="match_parent"
		    android:layout_marginLeft="15dp"
		    android:layout_marginRight="15dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:textColor="@color/white"
	        android:background="@drawable/login_btn_nor"
	        android:gravity="center"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:text="登录"/>
		</LinearLayout>
</LinearLayout>
