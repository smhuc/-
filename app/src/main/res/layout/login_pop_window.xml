<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/pop_bg">
   <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/popup_bg"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="210dp"
	    android:orientation="vertical" >
	    <TextView
	        android:id="@+id/tx_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/text_default"
	        android:textSize="@dimen/s16"
	        android:layout_marginTop="20dp"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:text="您尚未设置手势密码，是否立刻进行设置？"/>
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:layout_marginTop="20dp"
	        android:background="@color/text_bw"/>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:orientation="horizontal">
		    <TextView
		        android:id="@+id/tx_cancal" 
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:textColor="@color/text_pop"
		        android:textSize="@dimen/s16"
		        android:gravity="center"
		        android:text="取消"/>
		    <View 
		        android:layout_width="0.5dp"
		        android:layout_height="match_parent"
		        android:background="@color/text_bw"/>
		     <TextView
		         android:id="@+id/tx_ok" 
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:textColor="@color/title_red"
		        android:textSize="@dimen/s16"
		        android:gravity="center"
		        android:text="确定"/>
		</LinearLayout>
		<View 
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="@color/text_bw"/>
		<TextView
		    android:id="@+id/tx_never"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:textColor="@color/text_pop"
		    android:textSize="@dimen/s14"
		    android:gravity="center"
		    android:layout_gravity="center_horizontal"
		    android:layout_marginTop="10dp"
		    android:text="不再显示此信息"/>
	</LinearLayout>
</RelativeLayout>