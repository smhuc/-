<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg9"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical" >
    <View
	    android:id="@+id/view" 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/list_fenge"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
	        <TextView
	            android:id="@+id/tx_news_title" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/text_black"
	            android:layout_weight="1"
	            android:maxLines="2"
	            android:ellipsize="end"
	            android:textSize="@dimen/s19"/>
        	<ImageView 
        	    android:id="@+id/img_type"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_gravity="bottom|center_horizontal"
        	    android:visibility="gone"
        	    android:src="@drawable/mark_overseas"/>
        <ImageView
            android:id="@+id/img_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="15dp"
	    android:layout_marginBottom="15dp"
	    android:orientation="horizontal">
	    <TextView 
	        android:id="@+id/tx_laiyuan"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/text_bw"
	        />
	    <View 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"/>
	      <TextView 
	        android:id="@+id/tx_pinlun"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/text_bw"
	        />
	      <View 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"/>
	      <TextView
	        android:id="@+id/tx_time" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:lines="1"
	        android:ellipsize="end"
	        android:gravity="right"
			android:textColor="@color/text_bw"
	        />
	</LinearLayout>
	 <View
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/list_fenge"/>
</LinearLayout>
