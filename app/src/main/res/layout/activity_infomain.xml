<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lin_layout"
    android:orientation="vertical" >
    <include layout="@layout/activity_head_red"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/rel_bg"
	    android:orientation="horizontal">
	    <LinearLayout
	        android:id="@+id/lin_info1" 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	         <TextView
	             android:id="@+id/tx_info1" 
		        android:layout_width="match_parent"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:text="信息简报"
		        android:textColor="@color/text_red"
		        android:layout_marginBottom="10dp"
		        android:layout_marginTop="10dp"
		        android:gravity="center"/>
	         <View
	             android:id="@+id/view_info1"  
	             android:layout_width="match_parent"
	             android:layout_height="2dp"
	             android:background="@color/title_red"/>
	    </LinearLayout>
	    <LinearLayout 
	         android:id="@+id/lin_info2"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	         <TextView
	             android:id="@+id/tx_info2" 
		        android:layout_width="match_parent"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:text="专题报告"
		        android:textColor="@color/text_hui"
		         android:layout_marginBottom="10dp"
		        android:layout_marginTop="10dp"
		        android:gravity="center"/>
	         <View
	             android:id="@+id/view_info2"   
	             android:layout_width="match_parent"
	             android:layout_height="2dp"
	             android:visibility="gone"
	             android:background="@color/title_red"/>
	    </LinearLayout>
	</LinearLayout>
	<com.wangtian.message.view.EXListView
	    android:id="@+id/list"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:divider="@null"
	    android:background="@color/white"
	    android:dividerHeight="0dp"/>
	<com.wangtian.message.view.EXListView 
	    android:id="@+id/list1"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:divider="@color/list_fenge"
	    android:background="@color/white"
	    android:visibility="gone"
	    android:dividerHeight="0dp"/>
</LinearLayout>
