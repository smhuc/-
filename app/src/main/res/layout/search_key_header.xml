<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/ss_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    android:padding="5dp">


    <RelativeLayout

        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/ed_seach"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/research_bg"
            android:drawableLeft="@drawable/research_ico"
            android:hint="搜索"
            android:imeOptions="actionNone"
            android:inputType="text"
            android:lines="1"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tx_cancal"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:background="@drawable/login_input_del"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/find_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="搜索"
        android:textColor="@color/title_red"
        android:textSize="16sp" />

</LinearLayout>