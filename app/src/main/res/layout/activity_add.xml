<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lin_layout"
    android:orientation="vertical" >
    <include layout="@layout/activity_head_red"/>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="12dp"
	    android:background="@color/rel_bg">
	    <TextView
	        android:id="@+id/tx_all_check" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="5dp"
	        android:textColor="@color/text_hui"
	        android:text="全部取消订阅"
	        android:textSize="@dimen/s14"/>
	    <TextView 
	        android:id="@+id/tx_all_checked"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="5dp"
	        android:textColor="@color/text_red"
	        android:text="全部订阅"
	        android:textSize="@dimen/s14"/>
	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal">
	    <ListView
	        android:id="@+id/list_type" 
	        android:layout_width="0dp"
	        android:layout_weight="3"
	        android:divider="@null"
	        android:background="@color/white"
	        android:scrollbars="none"
	        android:layout_height="match_parent">
	        
	    </ListView>
	      <ListView 
	          	android:id="@+id/list_contact"
	        	android:layout_width="0dp"
	        	android:layout_weight="7"
	        	android:divider="#e9eeef"
	        	android:dividerHeight="1dp"
	        	android:background="@color/white"
	        	android:layout_height="match_parent">
	        
	    </ListView>
	</LinearLayout>
</LinearLayout>
