<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/pop_bg">
   <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/popup_bg"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="100dp"
	    android:paddingLeft="@dimen/d56"
	    android:orientation="vertical" >
	    <ImageView
	        android:id="@+id/img_cancal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right|top"
	        android:src="@drawable/subscribe_ico_colse"/>
	    <TextView 
	        android:id="@+id/tx_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/text_black"
	        android:textSize="@dimen/title"
	        android:textStyle="bold"
	        android:text="青年"/>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/d44"
	        android:orientation="horizontal">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/text_hui1"
	            android:textSize="@dimen/s16"
	            android:text="境内外："/>
	        <TextView
	            android:id="@+id/tx_china" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/text_hui1"
	            android:textSize="@dimen/s16"
	            android:text="境内外："/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/d24"
	        android:orientation="horizontal">
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/text_hui1"
	            android:textSize="@dimen/s16"
	            android:text="方    向："/>
	        <TextView
	            android:id="@+id/tx_type" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/text_hui1"
	            android:textSize="@dimen/s16"
	            android:text="境内外："/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/d24"
	        android:orientation="horizontal">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/text_hui1"
	            android:textSize="@dimen/s16"
	            android:text="地    区："/>
	        <TextView
	            android:id="@+id/tx_area" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/text_hui1"
	            android:textSize="@dimen/s16"
	            android:text="境内外："/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/d24"
	        android:orientation="horizontal">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/text_hui1"
	            android:textSize="@dimen/s16"
	            android:text="语    种："/>
	        <TextView
	            android:id="@+id/tx_lang" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/text_hui1"
	            android:textSize="@dimen/s16"
	            android:text="境内外："/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/d24"
	        android:visibility="gone"
	        android:orientation="horizontal">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/text_hui1"
	            android:textSize="@dimen/s16"
	            android:text="方    向："/>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/text_hui1"
	            android:textSize="@dimen/s16"
	            android:text="境内外："/>
	    </LinearLayout>
	</LinearLayout>
</RelativeLayout>