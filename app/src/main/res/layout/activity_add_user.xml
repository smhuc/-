<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:orientation="vertical"
    tools:context="com.wangtian.message.AddUserActivity">
    <include layout="@layout/activity_head_red"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="107"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            <TextView
                android:text="用户名"
                android:textSize="15sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/user_name_point_tv"
                android:text="＊"
                android:textSize="15sp"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>
            <EditText
                android:id="@+id/user_name_et"
                android:textColor="#333333"
                android:textSize="15sp"
                android:hint="请输入用户名"
                android:textColorHint="#cdcdcd"
                android:background="@null"
                android:layout_weight="269"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#d1d7d8"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/user_pass_rl"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="107"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            <TextView
                android:text="密码"
                android:textSize="15sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/password_point_tv"
                android:text="＊"
                android:textSize="15sp"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>
            <EditText
                android:id="@+id/password_et"
                android:textColor="#333333"
                android:textSize="15sp"
                android:hint="请输入密码"
                android:textColorHint="#cdcdcd"
                android:background="@null"
                android:layout_weight="269"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#d1d7d8"/>

    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="107"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="姓名"
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/name_point_tv"
                    android:text="＊"
                    android:textSize="15sp"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <EditText
                android:id="@+id/name_et"
                android:textColor="#333333"
                android:textSize="15sp"
                android:hint="请输入姓名"
                android:textColorHint="#cdcdcd"
                android:background="@null"
                android:layout_weight="269"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#d1d7d8"/>

    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="107"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="证件号码"
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <EditText
                android:id="@+id/card_num_et"
                android:textColor="#333333"
                android:textSize="15sp"
                android:hint="请输入证件号码"
                android:textColorHint="#cdcdcd"
                android:background="@null"
                android:layout_weight="269"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#d1d7d8"/>

    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="107"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="邮箱"
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <EditText
                android:id="@+id/email_et"
                android:textColor="#333333"
                android:textSize="15sp"
                android:hint="请输入邮箱"
                android:textColorHint="#cdcdcd"
                android:background="@null"
                android:layout_weight="269"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#d1d7d8"/>

    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="107"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="联系方式"
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <EditText
                android:id="@+id/phone_et"
                android:textColor="#333333"
                android:textSize="15sp"
                android:hint="请输入联系方式"
                android:textColorHint="#cdcdcd"
                android:background="@null"
                android:layout_weight="269"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#d1d7d8"/>

    </RelativeLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/user_del_tv"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/del_bg"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>
</LinearLayout>
