<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lin_layout"
    android:orientation="vertical" >
    <include layout="@layout/activity_head_red"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/rel_bg"
	    android:orientation="horizontal">
	    <LinearLayout
	        android:id="@+id/lin_info1" 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	         <TextView
	             android:id="@+id/tx_info1" 
		        android:layout_width="match_parent"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:text="全部"
		        android:textColor="@color/text_red"
		        android:layout_marginBottom="10dp"
		        android:layout_marginTop="10dp"
		        android:gravity="center"/>
	         <View
	             android:id="@+id/view_info1"  
	             android:layout_width="match_parent"
	             android:layout_height="2dp"
	             android:background="@color/title_red"/>
	    </LinearLayout>
	    <LinearLayout 
	         android:id="@+id/lin_info2"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	         <FrameLayout 
	             android:layout_width="match_parent"
		        android:layout_height="match_parent">
	             
		         <TextView
		             android:id="@+id/tx_info2" 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="最新预警"
			        android:textColor="@color/text_hui"
			         android:layout_marginBottom="10dp"
			        android:layout_marginTop="10dp"
			        android:gravity="center"/>
		         <TextView 
		             android:id="@+id/tx_num"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:background="@drawable/prompt_bg_point"
		             android:gravity="center"
		             android:paddingBottom="3dp"
		             android:layout_gravity="center"
		             android:layout_marginLeft="32dp"
		             android:layout_marginBottom="8dp"
		             android:textColor="@color/white"
		             android:textSize="11sp"
		             android:visibility="invisible"
		             android:text="3"/>
	         </FrameLayout>
	         <View
	             android:id="@+id/view_info2"   
	             android:layout_width="match_parent"
	             android:layout_height="2dp"
	             android:visibility="gone"
	             android:background="@color/title_red"/>
	    </LinearLayout>
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/lin_seach" 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/ss_bg"
	    android:padding="5dp"
	    android:focusable="true"
	    android:focusableInTouchMode="true"
	    android:orientation="horizontal">
	    <EditText
	        android:id="@+id/ed_seach"
	        android:layout_width="match_parent"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:drawableLeft="@drawable/research_ico"
	        android:background="@drawable/research_bg"
	        android:lines="1"
	        android:imeOptions="actionSearch"
	        android:inputType="text"
	        android:hint="搜索"/>
	    <TextView
	        android:id="@+id/tx_cancal" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/title_red"
	        android:textSize="@dimen/s16"
	        android:layout_marginLeft="15dp"
	        android:text="取消"/>
	</LinearLayout>
	<com.wangtian.message.view.XListView
	    android:id="@+id/list"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/white"
	    android:divider="@null"
	    android:dividerHeight="1dp"/>
</LinearLayout>
