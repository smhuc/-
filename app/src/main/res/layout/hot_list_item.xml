<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg9"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical" >
    <View
	    android:id="@+id/view" 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/list_fenge"/>
    <LinearLayout
        android:id="@+id/lin_dingyue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <ImageView 
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:src="@drawable/prompt_bg_point"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tx_baozhi" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/s14"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
	        <TextView
	            android:id="@+id/tx_news_title" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:textColor="@color/text_black"
	            android:lines="2"
	            android:ellipsize="end"
	            android:textSize="@dimen/s19"/>
        	<ImageView 
        	    android:id="@+id/img_type"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_gravity="bottom|center_horizontal"
        	    android:visibility="gone"
        	    android:layout_marginLeft="5dp"
        	    android:src="@drawable/mark_overseas"/>
    </LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="15dp"
	    android:layout_marginBottom="15dp"
	    android:orientation="horizontal">
	    <TextView 
	        android:id="@+id/tx_laiyuan"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:lines="1"
	        android:ellipsize="end"
	        android:textSize="13sp"
	        android:textColor="@color/text_bw"
	        />
	    <View 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"/>
	      <TextView 
	        android:id="@+id/tx_pinlun"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/text_bw"
	         android:textSize="13sp"
	        />
	      <View 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"/>
	      <TextView
	        android:id="@+id/tx_time" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	         android:textSize="13sp"
	        android:textColor="@color/text_bw"
	        />
	</LinearLayout>
	
</LinearLayout>
