<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wangtian.message.NewsListActivity">

    <include layout="@layout/activity_head_red" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/list_tb"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#f1f5f6"
        tl:tl_indicator_color="@color/red"
        tl:tl_indicator_style="NORMAL"
        tl:tl_tab_padding="0dp"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="@color/red"
        tl:tl_textUnselectColor="#565656"
        tl:tl_textsize="15sp"
        tl:tl_underline_gravity="BOTTOM" />

    <android.support.v4.view.ViewPager
        android:id="@+id/list_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />


</LinearLayout>
